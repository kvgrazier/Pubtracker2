@model IEnumerable<Pubtracker2FrontEnd.Models.ptStep>
@{ ViewBag.Title = "Steps";}
<h4>Steps</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StepId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StepName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StepId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StepName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StepId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StepId })
            </td>
        </tr>
    }

</table>
