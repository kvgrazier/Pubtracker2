@model Pubtracker2FrontEnd.Models.PublicationViewModel
@{ ViewBag.Title = "Edit Role"; }

<h4>Edit Role</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.vmPublication.PublicationId)

    <div class="form-group">
        <div class="control-label col-md-2">Role</div>
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.SelectedRoleId, Model.slRole, new { @id = "Role", @Name = "Role", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">User</div>
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.SelectedUserId, Model.slUser, new { @id = "User", @Name = "User", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
