@model Pubtracker2FrontEnd.Models.PublicationViewModel
@{ ViewBag.Title = "Edit Publication"; }
<h4>Edit Publication</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.vmPublication.PublicationId)
    @Html.HiddenFor(model => model.vmPublication.SortId);
    <div class="form-group">
        @Html.LabelFor(model => model.vmPublication.PublicationId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.vmPublication.PublicationId)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.vmPublication.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.vmPublication.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.vmPublication.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Type</div>
        <div class="col-md-10">
            @*@Html.DropDownListFor(m => m.SelectedUserRoleId, Model.slType)*@
            @Html.DropDownListFor(x => x.SelectedTypeId, Model.slType, new { @id = "Type", @Name = "Type", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.vmPublication.Series, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.vmPublication.Series, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.vmPublication.Series, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Division</div>
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.SelectedDivisionId, Model.slDivision, new { @id = "Division", @Name = "Division", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.vmPublication.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.vmPublication.Remarks, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.vmPublication.Remarks, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
