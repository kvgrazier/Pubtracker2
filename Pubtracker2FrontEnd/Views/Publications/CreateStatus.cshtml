@model Pubtracker2FrontEnd.Models.PublicationViewModel
@{ ViewBag.Title = "Create Status"; }

<h4>Create Status</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.vmPublication.PublicationId)

    <div class="form-group">
        <div class="control-label col-md-2">Status</div>
        <div class="col-md-10">
            @Html.DropDownListFor(x => x.slStep.First().Text, Model.slStep, new { @id = "Step", @Name = "Step", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Date Time</div>
        <div class="col-md-10">
            <input type="datetime-local" id="StepDateTime" name="StepDateTime" value= @Model.NowTime>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

