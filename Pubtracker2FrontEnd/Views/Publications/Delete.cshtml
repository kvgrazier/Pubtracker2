@model Pubtracker2FrontEnd.Models.ptPublication
@{ ViewBag.Title = "Delete Publication"; }

<h4>Delete Publication</h4>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>PublicationId</dt>
        <dd>@Html.DisplayFor(model => model.PublicationId)</dd>
        <dt>Title</dt>
        <dd>@Html.DisplayFor(model => model.Title)</dd>
        <dt>Type</dt>
        <dd>@Html.DisplayFor(model => model.Type.TypeName)</dd>
        <dt>Series</dt>
        <dd>@Html.DisplayFor(model => model.Series)</dd>
        <dt>Division</dt>
        <dd>@Html.DisplayFor(model => model.Division.DivisionName)</dd>
        <dt>Contact</dt>
        <dd>@Html.DisplayFor(model => model.Roles.Find(x => x.RoleName == "Contact").UserId)</dd>

        @{
            string parameterValue = Model.Statuses.OrderByDescending(x => x.StepDateTime).First().StepName;
        }
        <dt>Step Name</dt>
        <dd>@Html.DisplayFor(model => parameterValue)</dd>
        @{
            string parameterValue2 = Model.Statuses.OrderByDescending(x => x.StepDateTime).First().StepDateTime.ToString();
        }
        <dt>Step Date Time</dt>
        <dd>@Html.DisplayFor(model => parameterValue2)</dd>
        <dt>Remarks</dt>
        <dd>@Html.DisplayFor(model => model.Remarks)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
